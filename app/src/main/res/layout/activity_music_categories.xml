<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="123dp"
    tools:context=".music">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingVertical="30dp"
            android:text="@string/instrumental"
            android:backgroundTint="@color/app_button_color"
            app:cornerRadius="20dip" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingVertical="30dp"
            android:text="@string/relax"
            android:backgroundTint="@color/white"
            android:textColor="@color/app_button_color"
            app:strokeColor="@color/app_button_color"
            app:strokeWidth="4dp"
            app:cornerRadius="20dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingVertical="30dp"
            android:text="@string/upbeat"
            android:backgroundTint="@color/white"
            android:textColor="@color/app_button_color"
            app:strokeColor="@color/app_button_color"
            app:strokeWidth="4dp"
            app:cornerRadius="20dip"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingVertical="30dp"
            android:text="@string/slow_jazz"
            android:backgroundTint="@color/app_button_color"
            app:cornerRadius="20dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingVertical="30dp"
            android:text="@string/sleepyness"
            android:backgroundTint="@color/app_button_color"
            app:cornerRadius="20dip"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingVertical="30dp"
            android:text="@string/lo_fi"
            android:backgroundTint="@color/white"
            android:textColor="@color/app_button_color"
            app:strokeColor="@color/app_button_color"
            app:strokeWidth="4dp"
            app:cornerRadius="20dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingVertical="30dp"
            android:text="@string/meditation_music"
            android:backgroundTint="@color/app_button_color"
            app:cornerRadius="20dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingVertical="30dp"
            android:text="@string/chill_out_music"
            android:backgroundTint="@color/white"
            android:textColor="@color/app_button_color"
            app:strokeColor="@color/app_button_color"
            app:strokeWidth="4dp"
            app:cornerRadius="20dip"/>

    </LinearLayout>

</LinearLayout>